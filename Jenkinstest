pipeline {
    agent any

    tools {
        maven 'maven' // Ensure you have Maven installed in Jenkins
    }

    environment {
        SONAR_HOST_URL = 'http://your-sonarqube-server:9000' // Update with your SonarQube server URL
        SONAR_AUTH_TOKEN = credentials('sonarqube-token') // Use your SonarQube credentials
        DOCKER_REGISTRY = 'nraval'
        DOCKER_REPO = 'farecalculationservice'
        DOCKER_TAG = "${env.BUILD_ID}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/your-repo/farecalculationservice.git' // Update with your repo URL
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Run Tests and Code Coverage') {
            steps {
                sh 'mvn test jacoco:report' // Run tests and generate the JaCoCo coverage report
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml' // Archive test results
                    jacocoExec '**/target/jacoco.exec' // Ensure JaCoCo coverage report is gathered
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // Set up SonarQube environment
                    sh '''
                        mvn sonar:sonar \
                          -Dsonar.projectKey=farecalculationservice \
                          -Dsonar.projectName=FareCalculationService \
                          -Dsonar.java.binaries=target/classes \
                          -Dsonar.junit.reportPaths=target/test-classes/test-report.xml \
                          -Dsonar.jacoco.reportPaths=target/jacoco.exec
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Define the image name and tag
                    def imageName = 'farecalculationservice'
                    def tagName = 'latest'

                    // Build the Docker image
                    sh "docker build -t ${imageName}:${tagName} ."
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the Java application..."
                // Add your deployment commands here
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
            echo "Docker image ready for deployment."
        }
        failure {
            echo "Pipeline failed!"
        }
        always {
            archiveArtifacts 'target/*.jar'
            // Archive the JaCoCo coverage report
            archiveArtifacts '**/target/jacoco.exec'
        }
    }
}
